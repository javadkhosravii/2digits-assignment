{
  "name": "2digits-blog-case",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:web": "next dev --turbo",
    "dev": "turbo dev:web",
    "build:web": "next build",
    "build": "turbo build:web",
    "start": "next start",
    "types": "tsc --noEmit",
    "fix": "pnpm '/(lint|format):fix$/'",
    "format": "prettier \"**/*\" --ignore-unknown --check --cache",
    "format:fix": "prettier \"**/*\" --ignore-unknown --write --cache",
    "lint": "eslint . --cache --max-warnings 0",
    "lint:fix": "eslint . --fix --cache",
    "check": "turbo --continue format lint types",
    "codegen": "graphql-codegen"
  },
  "dependencies": {
    "graphql": "^16.10.0",
    "graphql-request": "^7.1.2",
    "next": "^15.1.7",
    "ofetch": "^1.4.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "server-only": "^0.0.1",
    "tailwind-variants": "^0.3.1"
  },
  "devDependencies": {
    "@2digits/eslint-config": "^2.10.8",
    "@2digits/prettier-config": "^2.6.6",
    "@2digits/tsconfig": "^0.6.3",
    "@graphql-codegen/cli": "^5.0.5",
    "@graphql-codegen/import-types-preset": "^3.0.0",
    "@graphql-codegen/typescript": "^4.1.3",
    "@graphql-codegen/typescript-generic-sdk": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.4.1",
    "@types/node": "^22.13.4",
    "@types/react": "^19.0.9",
    "@types/react-dom": "^19.0.3",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.20.1",
    "postcss": "^8.5.2",
    "prettier": "^3.5.1",
    "tailwindcss": "^3.4.17",
    "turbo": "^2.4.2",
    "typescript": "^5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "prettier": "@2digits/prettier-config"
}
